<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <stroke android:color="#53a2b9"
                android:width="1dp" />
            <gradient android:angle="0"
                android:startColor="@color/amae_light_primary"
                android:centerColor="@color/amae_light_primary"
                android:endColor="@color/amae_light_primary"
                android:type="linear"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:startColor="#80ffd300" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/amae_accent"
                    android:centerY="0.75"
                    android:endColor="@color/amae_accent"
                    android:startColor="@color/amae_accent" />
            </shape>
        </clip>
    </item>
</layer-list>